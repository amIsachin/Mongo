@model CouponDto

<form asp-action="CouponCreate">
    <div class="container border p-3">

        <div class="row">

            <label class="col-form-label pt-2">Create Coupon</label>

            <div class="mb-3">
                <label class="form-label">Coupon Code</label>
                <input asp-for="CouponCode" class="form-control" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Discount Amount</label>
                <input asp-for="CouponAmount" class="form-control" />
                <span asp-validation-for="CouponAmount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Minimum Amount</label>
                <input asp-for="MinAmount" class="form-control" />               
                <span asp-validation-for="MinAmount" class="text-danger"></span>

            </div>

            <div class="col-md-6">
                <button asp-action="CouponIndex" type="submit" class="btn btn-primary" style="width:50%">Back to list</button>
            </div>

            <div class="col-md-6">

                <button type="submit" class="btn btn-primary" style="width:50%">Submit</button>
            </div>
        </div>
    </div>
</form>

